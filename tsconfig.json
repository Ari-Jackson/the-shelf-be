{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "isolatedModules": true
  },
  "include": ["src/**/*", "db/**/*"],
  "exclude": ["node_modules"]
}
